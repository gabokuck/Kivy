<Box01>:
    spacing: 30
    padding: [30,20,40,50]
    canvas:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
            pos: self.pos

    BoxLayout:
        size_hint: 1,1
        canvas:
            Color:
                rgb: 1,0,0
            Rectangle:
                size: self.size
                pos: self.pos

    BoxLayout:
        orientation: 'vertical'
        padding: 30
        spacing: 30
        size_hint: 1,1
        canvas:
            Color:
                rgb: 0,0,1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            size_hint: 1,1
            canvas:
                Color:
                    rgba: 0,1,0,.5
                Rectangle:
                    size: self.size
                    pos: self.pos

        BoxLayout:
            size_hint: 1,1
            canvas:
                Color:
                    rgb: 0,0.5,0
                Rectangle:
                    size: self.size
                    pos: self.pos
        
        

